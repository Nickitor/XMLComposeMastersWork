<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.xmlcomposemasterswork.xml.presentation.screen.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_listsFragment"
            app:destination="@id/listsFragment"
            app:popUpTo="@id/listsFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/listsFragment"
        android:name="com.example.xmlcomposemasterswork.xml.presentation.screen.ListsFragment"
        android:label="fragment_lists"
        tools:layout="@layout/fragment_lists" />

</navigation>